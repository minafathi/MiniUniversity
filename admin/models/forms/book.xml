<?xml version="1.0" encoding="utf-8"?>
<form 				
	addrulepath="/administrator/components/com_miniuniversity/models/rules"
>
	<fieldset
	 name="details"
	 label="COM_MINIUNIVERSITY_BOOK_DETAILS" >
		<field
				name="id"
				type="hidden"
				/>
		<field
				name="name"
				type="text"
				label="COM_MINIUNIVERSITY_BOOK_NAME_LABEL"
				description="COM_MINIUNIVERSITY_BOOK_NAME_DESC"
				size="30"
				required="true"
				default=""
				validate=""
				message="COM_MINIUNIVERSITY_EMAIL_UNVALID"
				/>

		<field
				name="qextime"
				type="calendar"
				label="COM_MINIUNIVERSITY_MIANTERM_TIME_LABEL"
				description="COM_MINIUNIVERSITY_MIANTERM_TIME_DESC"
				size="30"
				default=""
				validate=""
				format="%Y-%m-%d %H:%M:%S"
				filter="user_utc"
				/>

		<field
				name="qexdis"
				type="text"
				label="COM_MINIUNIVERSITY_MIANTERM_DIS_LABEL"
				description="COM_MINIUNIVERSITY_MIANTERM_DIS_DESC"
				size="30"
				default=""
				/>

		<field
			name="bookpic"
			type="media"
			label="COM_MINIUNIVERSITY_UPLOAD_BOOK_IMAGE_LABEL"
			description="COM_MINIUNIVERSITY_UPLOAD_BOOK_IMAGE_DESC"
				 />

		<field
				name="endextime"
				type="calendar"
				label="COM_MINIUNIVERSITY_PAYANTERM_TIME_LABEL"
				description="COM_MINIUNIVERSITY_PAYANTERM_TIME_DESC"
				size="30"
				default=""
				format="%Y-%m-%d %H:%M:%S"
				filter="user_utc"
				/>
		<field
				name="endexdis"
				type="text"
				label="COM_MINIUNIVERSITY_PAYANTERM_DIS_LABEL"
				description="COM_MINIUNIVERSITY_PAYANTERM_DIS_DESC"
				size="30"
				default=""
				/>
	</fieldset>
	
</form>
