<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset
	 name="details"
	 label="COM_MINIUNIVERSITY_SEMESTER_DETAILS" >
		<field
				name="id"
				type="hidden"
				/>
		<field
				name="name"
				type="text"
				label="COM_MINIUNIVERSITY_TERM_NAME_LABEL"
				description="COM_MINIUNIVERSITY_TERM_NAME_DESC"
				size="30"
				required="true"
				default=""
				/>

		<field
				name="termtimes"
				type="calendar"
				label="COM_MINIUNIVERSITY_TERM_TIME_LABEL"
				description="COM_MINIUNIVERSITY_TERM_DESC"
				size="30"
				default=""
				format="%Y-%m-%d %H:%M:%S"
				filter="user_utc"
				/>


		<field
				name="termtimeex"
				type="calendar"
				label="COM_MINIUNIVERSITY_TERM_DATE_LABEL"
				description="COM_MINIUNIVERSITY_TERM_DATE_DESC"
				size="30"
				default=""
				format="%Y-%m-%d %H:%M:%S"
				filter="user_utc"
				/>
	</fieldset>
	
</form>
